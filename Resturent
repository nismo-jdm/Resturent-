        let cart = [];
        let currentLanguage = 'en';
        let currentPaymentMethod = 'upi';

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            renderMenu();
            renderFullMenu();
            updateCartCount();
            setupScrollAnimations();
            setupNavbarScroll();
            renderAdminMenuList();
        });

        // Page Navigation
        function showPage(pageName) {
            const pages = document.querySelectorAll('.page');
            pages.forEach(page => page.classList.remove('active'));
            document.getElementById(pageName + '-page').classList.add('active');
            window.scrollTo(0, 0);

            if (pageName === 'order') {
                renderCart();
            }
        }

        // Toggle Mobile Menu
        function toggleMenu() {
            document.querySelector('.nav-links').classList.toggle('active');
        }

        // Toggle Language
        function toggleLanguage() {
            currentLanguage = currentLanguage === 'en' ? 'ar' : 'en';
            const html = document.documentElement;
            const langBtn = document.querySelector('.lang-switch');
            
            if (currentLanguage === 'ar') {
                html.setAttribute('lang', 'ar');
                html.setAttribute('dir', 'rtl');
                langBtn.textContent = 'English';
            } else {
                html.setAttribute('lang', 'en');
                html.setAttribute('dir', 'ltr');
                langBtn.textContent = 'Ø§Ù„Ø¹Ø±Ø¨ÙŠØ©';
            }
        }

        // Render Menu
        function renderMenu(category = 'all') {
            const menuGrid = document.getElementById('menu-grid');
            const items = category === 'all' ? menuItems : menuItems.filter(item => item.category === category);
            
            menuGrid.innerHTML = items.slice(0, 6).map(item => `
                <div class="menu-item" data-category="${item.category}">
                    <div class="menu-item-image">${item.icon}</div>
                    <h3>${item.name}</h3>
                    <p class="arabic-name">${item.nameAr}</p>
                    <p class="price">â‚¹${item.price}</p>
                    <p>${item.description}</p>
                    <button class="order-btn" onclick="addToCart(${item.id})">Add to Cart</button>
                </div>
            `).join('');
        }

        // Render Full Menu
        function renderFullMenu(category = 'all') {
            const menuGrid = document.getElementById('full-menu-grid');
            const items = category === 'all' ? menuItems : menuItems.filter(item => item.category === category);
            
            menuGrid.innerHTML = items.map(item => `
                <div class="menu-item" data-category="${item.category}">
                    <div class="menu-item-image">${item.icon}</div>
                    <h3>${item.name}</h3>
                    <p class="arabic-name">${item.nameAr}</p>
                    <p class="price">â‚¹${item.price}</p>
                    <p>${item.description}</p>
                    <button class="order-btn" onclick="addToCart(${item.id})">Add to Cart</button>
                </div>
            `).join('');
        }

        // Filter Menu
        function filterMenu(category) {
            const buttons = document.querySelectorAll('#menu .category-btn');
            buttons.forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
            renderMenu(category);
        }

        function filterFullMenu(category) {
            const buttons = document.querySelectorAll('#full-menu-page .category-btn');
            buttons.forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
            renderFullMenu(category);
        }

        // Cart Functions
        function addToCart(itemId) {
            const item = menuItems.find(i => i.id === itemId);
            const cartItem = cart.find(i => i.id === itemId);
            
            if (cartItem) {
                cartItem.quantity++;
            } else {
                cart.push({ ...item, quantity: 1 });
            }
            
            updateCartCount();
            showNotification('Item added to cart!');
        }

        function updateCartCount() {
            const count = cart.reduce((sum, item) => sum + item.quantity, 0);
            document.querySelector('.cart-count').textContent = count;
        }

        function renderCart() {
            const container = document.getElementById('cart-items-container');
            
            if (cart.length === 0) {
                container.innerHTML = '<p style="text-align: center; color: var(--light-gold); padding: 3rem;">Your cart is empty. Add items from the menu!</p>';
                updateCartSummary();
                return;
            }
            
            container.innerHTML = cart.map(item => `
                <div class="cart-item">
                    <div class="cart-item-image">${item.icon}</div>
                    <div class="cart-item-details">
                        <h4 style="color: var(--primary-gold);">${item.name}</h4>
                        <p style="color: var(--light-gold); font-family: 'Amiri', serif;">${item.nameAr}</p>
                        <p style="color: var(--primary-gold); font-weight: 700;">â‚¹${item.price}</p>
                    </div>
                    <div class="quantity-controls">
                        <button onclick="updateQuantity(${item.id}, -1)">-</button>
                        <span style="color: var(--primary-gold); font-weight: 700;">${item.quantity}</span>
                        <button onclick="updateQuantity(${item.id}, 1)">+</button>
                    </div>
                    <button class="remove-btn" onclick="removeFromCart(${item.id})">Remove</button>
                </div>
            `).join('');
            
            updateCartSummary();
        }

        function updateQuantity(itemId, change) {
            const item = cart.find(i => i.id === itemId);
            if (item) {
                item.quantity += change;
                if (item.quantity <= 0) {
                    removeFromCart(itemId);
                } else {
                    renderCart();
                    updateCartCount();
                }
            }
        }

        function removeFromCart(itemId) {
            cart = cart.filter(i => i.id !== itemId);
            renderCart();
            updateCartCount();
        }

        function updateCartSummary() {
            const subtotal = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
            const tax = subtotal * 0.05;
            const delivery = cart.length > 0 ? 50 : 0;
            const total = subtotal + tax + delivery;
            
            document.getElementById('subtotal').textContent = `â‚¹${subtotal.toFixed(2)}`;
            document.getElementById('tax').textContent = `â‚¹${tax.toFixed(2)}`;
            document.getElementById('delivery').textContent = `â‚¹${delivery.toFixed(2)}`;
            document.getElementById('total').textContent = `â‚¹${total.toFixed(2)}`;
        }

        // Payment Functions
        function selectPayment(method) {
            currentPaymentMethod = method;
            document.querySelectorAll('.payment-method').forEach(pm => pm.classList.remove('active'));
            event.target.closest('.payment-method').classList.add('active');
            
            document.getElementById('upi-form').style.display = method === 'upi' ? 'block' : 'none';
            document.getElementById('card-form').style.display = method === 'card' ? 'block' : 'none';
            document.getElementById('cod-form').style.display = method === 'cod' ? 'block' : 'none';
        }

        function processPayment() {
            const orderId = Math.floor(Math.random() * 100000);
            document.getElementById('order-id').textContent = orderId;
            document.getElementById('success-message').classList.add('show');
            
            setTimeout(() => {
                document.getElementById('success-message').classList.remove('show');
                cart = [];
                updateCartCount();
                showPage('home');
            }, 3000);
        }

        // Admin Functions
        function addMenuItem(event) {
            event.preventDefault();
            
            const newItem = {
                id: menuItems.length + 1,
                name: document.getElementById('item-name').value,
                nameAr: document.getElementById('item-name-arabic').value,
                category: document.getElementById('item-category').value,
                price: parseInt(document.getElementById('item-price').value),
                description: document.getElementById('item-description').value,
                icon: document.getElementById('item-icon').value || 'ðŸ½ï¸'
            };
            
            menuItems.push(newItem);
            renderMenu();
            renderFullMenu();
            renderAdminMenuList();
            showNotification('Menu item added successfully!');
            event.target.reset();
        }

        function deleteMenuItem(itemId) {
            if (confirm('Are you sure you want to delete this item?')) {
                menuItems = menuItems.filter(item => item.id !== itemId);
                renderMenu();
                renderFullMenu();
                renderAdminMenuList();
                showNotification('Item deleted successfully!');
            }
        }

        function renderAdminMenuList() {
            const container = document.getElementById('admin-menu-list');
            container.innerHTML = menuItems.map(item => `
                <div class="menu-list-item">
                    <div>
                        <strong style="color: var(--primary-gold);">${item.name}</strong> (${item.nameAr})
                        <br>
                        <span style="color: var(--light-gold);">Category: ${item.category} | Price: â‚¹${item.price}</span>
                    </div>
                    <button class="delete-btn" onclick="deleteMenuItem(${item.id})">Delete</button>
                </div>
            `).join('');
        }

        // Scroll Animations
        function setupScrollAnimations() {
            const fadeElements = document.querySelectorAll('.fade-in');
            
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                    }
                });
            }, { threshold: 0.1 });
            
            fadeElements.forEach(el => observer.observe(el));
        }

        // Navbar Scroll
        function setupNavbarScroll() {
            window.addEventListener('scroll', () => {
                const navbar = document.querySelector('.navbar');
                if (window.scrollY > 100) {
                    navbar.classList.add('scrolled');
                } else {
                    navbar.classList.remove('scrolled');
                }
            });
        }

        // Notification
        function showNotification(message) {
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed;
                top: 100px;
                right: 20px;
                background: var(--primary-gold);
                color: var(--dark-bg);
                padding: 1rem 2rem;
                border-radius: 10px;
                z-index: 9999;
                animation: slideIn 0.3s ease-out;
                font-weight: 700;
            `;
            notification.textContent = message;
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.remove();
            }, 2000);
        }

        // Smooth Scroll
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                const href = this.getAttribute('href');
                if (href !== '#' && href.startsWith('#')) {
                    e.preventDefault();
                    const target = document.querySelector(href);
                    if (target) {
                        target.scrollIntoView({ behavior: 'smooth' });
                    }
                }
            });
        });
    </script>
</body>
</html>
