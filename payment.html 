    <script>
        let cart = JSON.parse(localStorage.getItem('cart')) || [];
        let selectedPayment = 'upi';

        function selectPayment(method) {
            selectedPayment = method;
            document.querySelectorAll('.payment-method').forEach(el => el.classList.remove('active'));
            event.target.closest('.payment-method').classList.add('active');
            
            if (method === 'card') {
                document.getElementById('cardDetails').classList.add('active');
                document.getElementById('upiDetails').classList.remove('active');
            } else {
                document.getElementById('upiDetails').classList.add('active');
                document.getElementById('cardDetails').classList.remove('active');
            }
        }

        function renderOrderSummary() {
            if (cart.length === 0) {
                window.location.href = 'order.html';
                return;
            }

            const itemsHtml = cart.map(item => `
                <div class="order-item">
                    <div>
                        <strong>${item.nameEn}</strong>
                        <div style="color: #666; font-size: 0.9rem;">Qty: ${item.quantity}</div>
                    </div>
                    <div>$${(item.quantity * item.price).toFixed(2)}</div>
                </div>
            `).join('');

            const subtotal = cart.reduce((sum, item) => sum + (item.quantity * item.price), 0);
            const tax = subtotal * 0.05;
            const delivery = 5;
            const total = subtotal + tax + delivery;

            document.getElementById('orderItems').innerHTML = itemsHtml + `
                <div class="order-item" style="border: none; color: #666;">
                    <div>Subtotal</div>
                    <div>$${subtotal.toFixed(2)}</div>
                </div>
                <div class="order-item" style="border: none; color: #666;">
                    <div>Tax</div>
                    <div>$${tax.toFixed(2)}</div>
                </div>
                <div class="order-item" style="border: none; color: #666;">
                    <div>Delivery</div>
                    <div>$${delivery.toFixed(2)}</div>
                </div>
            `;

            document.getElementById('totalAmount').innerHTML = `
                <span>Total</span>
                <span>$${total.toFixed(2)}</span>
            `;
        }

        function placeOrder() {
            const customerName = document.getElementById('customerName').value;
            const phone = document.getElementById('phone').value;
            const address = document.getElementById('address').value;

            if (!customerName || !phone || !address) {
                alert('Please fill in all required fields!');
                return;
            }

            const subtotal = cart.reduce((sum, item) => sum + (item.quantity * item.price), 0);
            const tax = subtotal * 0.05;
            const delivery = 5;
            const total = subtotal + tax + delivery;

            const orderId = 'ORD' + Date.now();
            const order = {
                orderId: orderId,
                customerName: customerName,
                phone: phone,
                address: address,
                items: cart,
                subtotal: subtotal,
                tax: tax,
                delivery: delivery,
                total: total,
                paymentMethod: selectedPayment,
                status: 'Pending',
                date: new Date().toISOString()
            };

            // Save order to localStorage
            let orders = JSON.parse(localStorage.getItem('orders')) || [];
            orders.push(order);
            localStorage.setItem('orders', JSON.stringify(orders));

            // Clear cart
            localStorage.removeItem('cart');

            // Show success message
            document.getElementById('orderId').textContent = orderId;
            document.getElementById('paymentForm').style.display = 'none';
            document.getElementById('successMessage').classList.add('active');
        }

        // Initialize
        renderOrderSummary();

        // Card number formatting
        document.getElementById('cardNumber')?.addEventListener('input', function(e) {
            let value = e.target.value.replace(/\s/g, '');
            let formatted = value.match(/.{1,4}/g)?.join(' ') || value;
            e.target.value = formatted;
        });

        // Expiry formatting
        document.getElementById('expiry')?.addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length >= 2) {
                value = value.slice(0, 2) + '/' + value.slice(2, 4);
            }
            e.target.value = value;
        });
    </script>
</body>
