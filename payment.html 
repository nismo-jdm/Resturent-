                    <h2>Order Summary</h2>
                    <div id="orderItems"></div>
                    <div class="summary-total" id="totalAmount"></div>
                    <button class="place-order-btn" onclick="placeOrder()">
                        <i class="fas fa-check-circle"></i> Place Order
                    </button>
                </div>
            </div>
